<div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingOne">
        <h2 class="sub-title panel-title">
            <a data-toggle="collapse"
               href="#collapseOne" aria-expanded="true"
               aria-controls="collapseOne">
                                        <span class="fw-stack">
                                        <i class="fw fw-ring fw-stack-2x"></i>
                                        <i class="fw fw-arrow fw-down fw-stack-1x"></i>
                                        </span>
                Device Operations
            </a>
        </h2>
    </div>
    <div id="collapseOne" class="panel-collapse collapse in"
         role="tabpanel" aria-labelledby="headingOne">
        <div id="device-location" class="panel-body">
            {{#if control_operations}}
                <table class="table table-responsive table-striped" id="operations">
                    {{#each control_operations}}
                        <form action="{{@app.context}}/apis/operations/{{../deviceType}}/{{operation}}?deviceId={{../deviceId}}" method="post">
                            <div class="row">
                                <tbody>
                                    <tr role="row" class="even">
                                        <td class="sorting_1" style="padding:10px 15px; width: 15%;;">{{name}}</td>
                                        <td style="padding:10px 15px width: 15%;;"><button class="wr-btn">&nbsp;&nbsp;&nbsp;&nbsp;Send to Display&nbsp;&nbsp;&nbsp;&nbsp;</button></td>
                                        <td style="padding:10px 15px width: 15%;;"><label id="lblSending" class="wr-input-label hidden"><i class="fw fw-lifecycle fw-spin fw-2x"></i> Sending..</label></td>
                                        <td style="padding:10px 15px width: 15%;;"><label id="lblSent" class="wr-input-label hidden"><i class="fw fw-check fw-2x"></i> Sent</label></td>
                                        <td style="padding:10px 15px width: 15%;;"><label id="lblpreviousoperation" class="wr-input-label">Previous Operation</label></td>
					                    <td style="padding:10px 15px width: 15%;;"><label id="lblpreviousoperation" class="wr-input-label">Previous Result</label></td>
                                    </tr>
                                </tbody>
                            </div>
                        </form>
                    {{/each}}
                </table>
            {{/if}}
        </div>
    </div>
</div>